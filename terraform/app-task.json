[
    {
        "name": "app",
        "image": "${image_url}",
        "portMappings": [
            {
                "hostPort": 8080,
                "protocol": "tcp",
                "containerPort": 8080
            }
        ],
        "environment": [
            {
                "name": "SOMETHING_ENV1",
                "value": "${SOMETHING_ENV1}"
            },
            {
                "name": "SOMETHING_ENV2",
                "value": "${SOMETHING_ENV2}"
            }
        ],
        "memoryReservation": 256,
        "essential": true,
        "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
                "awslogs-group": "${log_group_name}",
                "awslogs-region": "${region}",
                "awslogs-stream-prefix": "${name}"
            }
        }
    }
]
